extends ../layout

block content
    h1.
        User ID #{user._id}
    form(action='/users/#{user._id}/edit',method='post',name='updateUser',enctype='application/x-www-form-urlencoded')
        p Name: 
            input#inputName(type='text', value='#{party.name}', name='name')
        p Age: 
            input#inputAge(type='Number', value='#{userAge}', name='dob')
        p Email:
            input#inputEmail(type='text', name='email', value='#{user.email}')
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update
